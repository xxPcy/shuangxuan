/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-content {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  width: 90%;
  max-width: 500px;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
  animation: fadeIn 0.3s;
  position: relative;
}

/* 模态框关闭按钮 */
.modal-close {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #ddd;
  border: none;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #333;
  cursor: pointer;
  transition: background-color 0.3s;
}

.modal-close:hover {
  background-color: #bbb;
}

.modal-close:active {
  background-color: #999;
}
/* 模态框淡入效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}
