}
.mentions {
  font-size: 27rpx; /* 设置文字大小 */
  color: rgb(15, 15, 15); /* 设置文字颜色 */
  text-align: start; /* 水平居中 */
  display: block; /* 确保元素是块级元素，方便应用 text-align */
  margin-bottom: 15rpx; /* 设置下边距，避免与按钮重叠 */
}

/* 学生详情弹窗 */
.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.2);
  width: 90%;
  max-width: 500rpx;
  padding: 30rpx;
  z-index: 1000;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 10rpx;
}

.close-btn {
  background-color: transparent;
  border: none;
  font-size: 32rpx;
  font-weight: bold;
  cursor: pointer;
  color: #888888;
  line-height: 1;
}

/* 关闭按钮 */
.close-btn {
  position: absolute; /* 绝对定位 */
  top: 0;
  right: 0;
  transform: translate(42%, -20%); /* 修正位置，让按钮位于边界外 */
  font-size: 40rpx;
  color: #888;
  background: none;
  border: none;
  cursor: pointer;
  z-index: 1001;
}

.modal-content view {
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #333333;
}

.actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.actions button {
  flex: 1;
  margin: 0 10rpx;
  padding: 15rpx 0;
  border-radius: 10rpx;
  border: none;
  font-size: 28rpx;
}

.actions button:first-child {
  background-color: #6ee238;
  color: #282c25;
}

.actions button:last-child {
  background-color: #ff4d4f;
  color: white;
}

