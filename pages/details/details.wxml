<!-- 头像部分 -->
<view class="img-box">
<image src="{{teacher.picture}}" mode="" class="mypicture"/>
</view>
<!-- 个人信息部分 -->
<view class="info-box">
  <view class="info-title">个人信息</view>

  <view class="info-item">
    <text class="info-label">姓名：</text>
    <text class="info-content">{{teacher.name}}</text>
  </view>

  <view class="info-item">
    <text class="info-label">职称：</text>
    <text class="info-content">{{teacher.Jobposition}}</text>
  </view>

  <view class="info-item">
    <text class="info-label" >邮箱：</text>
    <text class="copy-content" bindtap="copyText" data-text="{{teacher.email}}">{{teacher.email}}</text>
  </view>

  <view class="info-item">
    <text class="info-label">研究方向：</text>
    <text class="info-content">{{teacher.ezresearch}}</text>
  </view>

  <view class="info-item">
    <text class="info-label">办公室：</text>
    <text class="info-content">{{teacher.office}}</text>
  </view>

  <view class="info-item">
    <text class="info-label">招生说明：</text>
    <text class="copy-content" bindtap="copyText" data-text="{{teacher.description}}">{{teacher.description}}</text>
  </view>
</view>

<view class="quota-title">可选专业（按 Logic 动态生成）</view>
<view class="quota-grid">
  <view class="quota-item" wx:for="{{quotaButtons}}" wx:key="code">
    <button
      class="quota-btn"
      style="background-color: {{item.color}};"
      data-code="{{item.code}}"
      data-name="{{item.name}}"
      data-disabled="{{item.disabled}}"
      bindtap="selectTeacherByCategory"
      disabled="{{item.disabled}}"
    >
      {{item.name}}（{{item.code}}）
    </button>
  </view>
</view>
