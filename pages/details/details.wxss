/* 个人信息卡片样式 */
.info-box {
  background-color: #f9f9f9;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 10px;
}

/* 标题样式 */
.info-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15px;
  text-align: center;
}

/* 每项信息的样式 */
.info-item {
  margin-bottom: 15px;
}

/* 标签部分样式 */
.info-label {
  font-size: 16px;
  color: #555;
  font-weight: 500;
}

/* 内容部分样式 */
.info-content {
  font-size: 16px;
  color: #333;
}
.copy-content{
  word-break: break-word;  /*  允许单词内换行 */
  white-space: normal;     /*  让文本正常换行 */
  overflow-wrap: break-word; /*  让长单词也能断行 */
  color: #37587c; /* 让文本颜色变蓝，提示用户可以点击 */
  text-decoration: underline; /* 添加下划线，增强点击感 */
  cursor: pointer; /* 提示用户可以点击 */
}
