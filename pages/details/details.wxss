/* pages/details/details.wxss */

.box, .box2, .box3 ,.box4,.box5{
  display: flex;
  flex-wrap: wrap;           /* 使按钮自动换行 */
  gap: 10px;                 /* 按钮之间的间距 */
  justify-content: space-evenly; /* 让按钮均匀分布 */
  margin: 9px 0;            /* 容器上下间距 */
}
#but1{
  max-width: none;
  width:200px;
}
#but2{
  max-width: none;
  width: 200px;
}
/* 设置禁用按钮的样式 */
button:disabled {
  background-color: #d3d3d3; /* 禁用按钮背景色 */
  color: #a9a9a9;             /* 禁用按钮字体颜色 */
}
button {
  max-width: 204px;/* //让按钮宽度自适应，填满父容器//设置按钮的宽度 */       
  height: 40px;              /* 设定按钮的高度 */
  display: flex;             /* 使用 Flexbox 布局来居中内容 */
  align-items: center;       /* 垂直居中 */
  justify-content: center;   /* 水平居中 */
  margin: 10px 0;             /* 按钮之间的上下间距 */
  font-size: 15px;           /* 设置字体大小 */
  border-radius: 30px;        /* 按钮圆角 */
  padding: 0 8px;           /* 左右内边距 */
  flex:1;
  border: 4rpx solid rgba(65, 175, 179, 0.74);
}
.mypicture{
  width: 200rpx;
  height: 200rpx;
  border-radius: 90%; /* 可选：使图片圆形 */
}
.img-box{
  display: flex;
  justify-content: center;
}
.Website{
  display: flex;
  justify-content: center;
}
