/* pages/details/details.wxss */
.mypicture{
  width: 200rpx;
  height: 200rpx;
  border-radius: 90%;
}

.img-box{
  display: flex;
  justify-content: center;
}

.info-box {
  background-color: #f9f9f9;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 16px;
}

.info-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15px;
  text-align: center;
}

.info-item {
  margin-bottom: 15px;
}

.info-label {
  font-size: 16px;
  color: #555;
  font-weight: 500;
}

.info-content {
  font-size: 16px;
  color: #333;
}

.copy-content{
  word-break: break-word;
  white-space: normal;
  overflow-wrap: break-word;
  color: #37587c;
  text-decoration: underline;
  cursor: pointer;
}

.quota-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin: 10rpx 8rpx 6rpx;
}

.quota-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 0 8rpx 12rpx;
}

.quota-item {
  width: calc(50% - 6rpx);
}

.quota-btn {
  width: 100%;
  min-height: 78rpx;
  border-radius: 999rpx;
  border: 2rpx solid rgba(65, 175, 179, 0.74);
  color: #333;
  font-size: 26rpx;
  line-height: 1.3;
  padding: 10rpx 14rpx;
  white-space: normal;
  word-break: break-word;
}

button:disabled {
  background-color: #d3d3d3;
  color: #a9a9a9;
}
