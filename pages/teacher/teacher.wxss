page {
  background-color: #f0f0f0;
}

.container {
  display: flex;
  padding: 30rpx; /* 调整此处以修改内边距 */
  flex-direction: row;
  justify-items: flex-start;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  border-radius: 30rpx;
  background-color: #fcfcfc;
  box-shadow: 0 10rpx 28rpx rgba(0, 0, 0, 0.1);
  justify-content: flex-start;
}

.image {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: cover;
  margin-right: 140rpx; /* 可以调整此值 */
}
.Mybutton {
  flex: 1;
  min-width: 160rpx; 
  max-width: 300rpx;
  font-size: auto;
  border-radius: 30rpx;
  margin-right: 15rpx;
  border: none;
  color: #4f574d;
  background-color: #e9e9e9;
  transition: background-color 0.3s;
}
.cancel{  
  min-width: 160rpx;
  border-radius: 30rpx;
  background-color: rgba(255, 0, 0, 0.705);
  transition: background-color 0.3s;
  color: #f7efef;
}
.hover {
  background-color: #0056b3; /* 点击时的背景颜色 */
}
.text-name, .text-id {
  line-height: 1.5; /* 增加行高 */
}

.text-name {
  font-family: 'Arial', sans-serif;
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.text-id {
  font-family: 'Arial', sans-serif;
  font-size: 14px;
  color: #666;
}
.box{
  display: flex;
  justify-content: center; /* 水平居中 */
}
.container-text{
  display: flex;
  padding: 30rpx; /* 调整此处以修改内边距 */
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  border-radius: 30rpx;
  background-color: #fcfcfc;
  box-shadow: 0 10rpx 28rpx rgba(0, 0, 0, 0.1);
  justify-content: center;
}
.shortline{
  color: rgb(85, 85, 85);
