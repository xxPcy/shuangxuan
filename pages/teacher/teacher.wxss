/* 已申请导师部分 */
.pending {
  padding: 20px;
  background-color: #f9f9f9; /* 背景颜色 */
  border-radius: 12px; /* 圆角效果 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1); /* 柔和的阴影 */
  margin-top: 20rpx; /* 上边距 */
  min-height: 100px; /* 确保容器高度足够 */
  margin-right: 25rpx;
  margin-left: 25rpx;
}

.pending text {
  font-size: 27rpx;
  margin-bottom: 10rpx;
  display: block;
  font-weight: bold;
}

.pending button {
  background-color: #f44336; /* 红色背景 */
  color: white;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  font-size: 25rpx;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s;
}

.pending button:hover {
  background-color: #d32f2f; /* 红色悬停效果 */
}

/* 已选择导师部分 */
.chosed {
  padding: 20px;
  background-color: #f9f9f9; /* 背景颜色 */
  border-radius: 12px; /* 圆角效果 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1); /* 柔和的阴影 */
  margin-top: 20rpx; /* 上边距 */
  margin-right: 25rpx;
  margin-left: 25rpx;
}

.chosed text {
  font-size: 27rpx;
  margin-bottom: 10rpx;
  display: block;
  font-weight: bold;
}

/* 未申请导师部分 */
.no-apply {
  padding: 20px;
  background-color: #f9f9f9; /* 背景颜色 */
  border-radius: 12px; /* 圆角效果 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1); /* 柔和的阴影 */
